<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginVertical="3dp"
              android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/pure_background"
            android:foreground="?attr/selectableItemBackground"
            app:strokeColor="@color/card_background"
            app:strokeWidth="1dp"
            app:cardCornerRadius="8dp"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Title\nI am a Title\n11111"/>

            <TextView
                    android:id="@+id/summary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:maxLines="4"
                    android:ellipsize="end"
                    tools:text="Lorem ipsum dolor sit amet, vide minimum has an, mei splendide adolescens an. Nam ne appetere electram, ne per natum ludus. Sit nisl utamur nonumes te, eam conceptam sadipscing ea, sit ad graeco pertinacia maiestatis. Amet graece epicurei sit ut, omnium saperet an mel. Duo partem similique ad, vis no commune periculis. Ad eum unum constituto complectitur, modo agam abhorreant ex per, eu justo reprimique omittantur usu."
                    />

            <TextView
                    android:id="@+id/details"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="114514赞同 作者"
                    />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
